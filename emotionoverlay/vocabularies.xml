<?xml version="1.0" encoding="UTF-8"?>  
<emotionml version="1.0" xmlns="http://www.w3.org/2009/10/emotionml">
    <!-- EDITED to contain metadata information about the vocabularies (<info>-tags) by V Wikstrom -->

    <!-- CATEGORIES -->

    <vocabulary type="category" id="big6">
        <info>
            <additional:title value="Ekman's &quot;big six&quot; basic emotions"/>
            <additional:description value="These six terms are proposed by Paul Ekman (Ekman, 1972, p. 251-252) as basic emotions with universal facial expressions -- emotions that are recognized and produced in all human cultures."/>
        </info>
        <item name="anger" />
        <item name="disgust"/>
        <item name="fear"/>
        <item name="happiness"/>
        <item name="sadness"/>
        <item name="surprise"/>
    </vocabulary>

    <vocabulary type="category" id="everyday-categories">
        <info>
            <additional:title value="Everyday emotion vocabulary"/>
            <additional:description value="These 17 terms are the result of a study by Cowie et al. (Cowie et al., 1999) investigating emotions that frequently occur in everyday life."/>
        </info>
        <item name="affectionate"/>
        <item name="afraid"/>
        <item name="amused"/>
        <item name="angry"/>
        <item name="bored"/>
        <item name="confident"/>
        <item name="content"/>
        <item name="disappointed"/>
        <item name="excited"/>
        <item name="happy"/>
        <item name="interested"/>
        <item name="loving"/>
        <item name="pleased"/>
        <item name="relaxed"/>
        <item name="sad"/>
        <item name="satisfied"/>
        <item name="worried"/>        
    </vocabulary>
  
    <vocabulary type="category" id="occ-categories">
        <info>
            <additional:title value="OCC categories"/>
            <additional:description value="The 22 OCC categories are proposed by Ortony, Clore and Collins (Ortony et al., 1988, p. 19) as part of their appraisal model."/>
        </info>
        <item name="admiration"/>
        <item name="anger"/>
        <item name="disappointment"/>
        <item name="distress"/>
        <item name="fear"/>
        <item name="fears-confirmed"/>
        <item name="gloating"/>
        <item name="gratification"/>
        <item name="gratitude"/>
        <item name="happy-for"/>
        <item name="hate"/>
        <item name="hope"/>
        <item name="joy"/>
        <item name="love"/>
        <item name="pity"/>
        <item name="pride"/>
        <item name="relief"/>
        <item name="remorse"/>
        <item name="reproach"/>
        <item name="resentment"/>
        <item name="satisfaction"/>
        <item name="shame"/>
    </vocabulary>    
    
    <vocabulary type="category" id="fsre-categories">
        <info>
            <additional:title value="FSRE categories"/>
            <additional:description value="The 24 FSRE categories are used in the study by Fontaine, Scherer, Roesch and Ellsworth (Fontaine et al., 2007, p. 1055) investigating the dimensionality of emotion space."/>
        </info>
        <item name="anger"/>
        <item name="anxiety"/>
        <item name="being-hurt"/>
        <item name="compassion"/>
        <item name="contempt"/>
        <item name="contentment"/>
        <item name="despair"/>
        <item name="disappointment"/>
        <item name="disgust"/>
        <item name="fear"/>
        <item name="guilt"/>
        <item name="happiness"/>
        <item name="hate"/>
        <item name="interest"/>
        <item name="irritation"/>
        <item name="jealousy"/>
        <item name="joy"/>
        <item name="love"/>
        <item name="pleasure"/>
        <item name="pride"/>
        <item name="sadness"/>
        <item name="shame"/>
        <item name="stress"/>
        <item name="surprise"/>
    </vocabulary>

    <vocabulary type="category" id="frijda-categories">
        <info>
            <additional:title value="Frijda's categories"/>
            <additional:description value="This category set is included because according to Nico Frijda's proposal of action tendencies (Frijda, 1986), these categories are related to action tendencies."/>
        </info>
        <item name="anger"/>
        <item name="arrogance"/>
        <item name="desire"/>
        <item name="disgust"/>
        <item name="enjoyment"/>
        <item name="fear"/>
        <item name="humility"/>
        <item name="indifference"/>
        <item name="interest"/>
        <item name="resignation"/>
        <item name="shock"/>
        <item name="surprise"/>
    </vocabulary>
  
    <!-- DIMENSIONS -->

    <!-- 2DES model added by v wikstrom -->
    <vocabulary type="dimension" id="2des">
        <info>
            <additional:title value="2-dimensional emotion scale"/>
            <additional:description value="The 2-dimensional arousal-valence emotion scale is used in James Russell's circumplex model of emotions. (Russell, 1980). "/>
        </info>
        <item name="arousal"/>
        <item name="valence"/>
    </vocabulary>

    <!-- 2DES+sincerity model added by v wikstrom -->
    <vocabulary type="dimension" id="2des+sincerity">
        <info>
            <additional:title value="2-dimensional emotion scale + sincerity"/>
            <additional:description value="The 2-dimensional arousal-valence emotion scale is used in James Russell's circumplex model of emotions. (Russell, 1980). "/>
        </info>
        <item name="arousal"/>
        <item name="valence"/>
        <item name="sincerity"/>
    </vocabulary>

    <vocabulary type="dimension" id="pad-dimensions">
        <info>
            <additional:title value="Mehrabian's PAD dimensions"/>
            <additional:description value="Mehrabian proposed a three-dimensional description of emotion in terms of Pleasure, Arousal, and Dominance (PAD; Mehrabian, 1996, p. 264)."/>
        </info>
        <item name="pleasure"/>
        <item name="arousal"/>
        <item name="dominance"/>
    </vocabulary>
  
    <vocabulary type="dimension" id="fsre-dimensions">
        <info>
            <additional:title value="FSRE dimensions"/>
            <additional:description value="The four emotion dimensions obtained in the study by Fontaine, Scherer, Roesch and Ellsworth (Fontaine et al., 2007, p. 1051 and 1055) investigating the dimensionality of emotion space."/>
        </info>
        <item name="valence"/>
        <item name="potency"/>
        <item name="arousal"/>
        <item name="unpredictability"/>
    </vocabulary>
 
    <vocabulary type="dimension" id="intensity-dimension">
        <info>
            <additional:title value="The intensity dimension"/>
            <additional:description value="Sometimes it is necessary to represent the mere fact that an emotion of some undefined nature is present with a certain intensity. This can be achieved using the dimension vocabulary consisting of the single dimension &quot;intensity&quot;."/>
        </info>
        <item name="intensity"/>
    </vocabulary>
 
    <!-- APPRAISALS -->
  
    <vocabulary type="appraisal" id="occ-appraisals">
        <info>
            <additional:title value="OCC appraisals"/>
